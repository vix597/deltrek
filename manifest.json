{
    "manifest_version": 2,
    "name": "Deltrek! Time Tracking that works.",
    "short_name": "Deltrek!",
    "version": "0.0.0.6",
    "content_scripts": [
        {
            "matches": [
                "https://te3prod.deltekenterprise.com/DeltekTC/TimeCollection.msv"
            ],
            "js": [
                "external/js/jquery-3.1.1.min.js",
                "timesheetdb.js",
                "settingsdb.js",
                "content.js"
            ] 
        }
    ],
    "permissions": [
        "storage",
        "notifications"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}